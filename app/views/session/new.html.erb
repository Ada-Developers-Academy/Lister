Log In

<%= form_tag create_session_path do %>
  <p>
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button">
    <%= submit_tag "Log In" %>
  </p>
<% end %>