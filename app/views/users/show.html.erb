<div class="row row-offcanvas row-offcanvas-right">

  <% if @current_user.nil? %>

  <div class="col-xs-10 col-sm-7">
    <div class="jumbotron">
      <%= "Welcome to Lister!" %>
      <p><a class="signin">Sign in</a> or <a class="signup">sign up</a> for Lister & start making your first lists!</p>
      <div id="sign-up-area"><%= render "users/form" %></div>
      <div id="sign-in-area" ><%= render "sessions/new" %></div>
    </div>
  </div>

<br><br>
  <div class="col-xs-4 col-sm-3 sidebar-offcanvas" style="border: 1px dashed">
    <% @lists.each do |list| %>
    <div class="row"><%= link_to "#{list.name}", list_path(list.id) %></div>
    <% end %>
  </div>

<% else %>

  <div class="col-xs-10 col-sm-7">
    <div class="jumbotron">
      <h2><%= "Welcome to Lister!" %></h2>
      <p>You have <%= "#{@users_lists.count}" %> lists. Create a <%= link_to "new list", new_list_path %> today.</p>
    </div>
  </div>

  <div class="col-xs-4 col-sm-3 sidebar-offcanvas" style="border: 1px dashed">
  <table class="table table-striped"><h3> Explore the latest lists: </h3><br>
    <tbody>
      <% @lists.each do |list| %>
        <tr><td><%= link_to "#{list.name}", list_path(list.id) %></td></tr>
      <% end %>
    </tbody>
    </table>
    </div>

      <div class="col-xs-10 col-sm-7"style="border: 1px dashed"><h4> Your lists:</h4>
      <table class="table table-striped">
    <tbody>
      <% @users_lists.each do |list| %>
        <tr><td><%= link_to "#{list.name}", list_path(list.id) %></td></tr>
      <% end %>
    </tbody>
    </table>


<%  end %>
</div>
