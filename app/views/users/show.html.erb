<div class= 'container'>
  <h3>Hi <%= @user.username %></h3> 
  <h4>Your lists are below:</h4>

  <ul>
    <% @user.lists.each do |list| %>
  <li>
    <%= link_to list.title, list_path(list.id) %>
    <%= link_to "Delete List", list_path(list), :method => :delete, class: "btn btn-danger btn-xs" %>
    <br>
    <% end %>
  </ul>

  <h4>Create a new list</h4>

  <%= link_to "Add List", new_list_path(user_id: @user.id), id: 'addlist', remote: true %>
</div>

