<h1>Hello, <%= @user.username%>!</h1>
<hr>

<% if @lists.empty? %>
  <div>
    <h2>You don't have any lists!</h2>
  </div>
<% else %>
  <ul>
    <h2>Your lists</h2>
    <% @lists.each do |list| %>
      <li>
        <%= link_to "#{list.name}", list_path(list) %>
        <%= link_to "Delete", list_path(list), class: "destroy-list", method: :delete %>
      </li>

    <% end %>
  </ul>
<% end %>

<div>
  <%= link_to "Create new list!", new_list_path %>
</div>


