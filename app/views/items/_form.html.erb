<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>
<% end %>

<%= form_for(@item, url: create_item_path, id: 'new_item') do |f| %>
  <div class="field">
    <%= f.label 'Add an item!' %>
    <%= f.text_field :name %>
  </div>
  <%= hidden_field_tag :list_id, params[:id] %>
  <%= hidden_field_tag :id, @item.id %>
  <div class="actions"><div class='new_item'><%= f.submit %></div></div>
<% end %>