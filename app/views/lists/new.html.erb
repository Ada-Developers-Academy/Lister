<% @list.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<%= form_for @list do |f| %>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class='submit'>
    <%= f.submit %>
  </div>
  <% end %>