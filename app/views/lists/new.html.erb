<h1>Making a new list, how exciting!</h1>

<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>