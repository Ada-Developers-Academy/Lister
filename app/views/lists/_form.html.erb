<h1>Create list</h1>
<%= form_for @list do |f| %>
  <% if @list.errors.any? %>
    <h2>Form is invalid</h2>
    <% for message in @list.errors.full_messages %>
      <%= message %>
    <% end %>
  <% end %>

  <div class = 'field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
   <div class = 'field'>
    <%= f.label :item_name, "Add item!" %>
    <%= f.text_field :item_name %>
  </div>
  
  
  <%= f.submit 'Create list!' %>
<% end %>


