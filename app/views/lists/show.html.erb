<%= @list.title %><br>

<% if @current_user && @current_user.id == @list.user_id %>
  <ul class="main-list">
  <% @list.elements.each do |element| %>
  <li><%= element.body %><%= link_to "Delete", element, method: :delete, :class => "btn btn-default btn-xs ajax-destroy" %></li>
  <% end %>
  </ul>
  <%= form_for(@element) do |f| %>
    <p>
      <%= f.hidden_field :list_id, value: @list.id %>
    </p>

    <p>
      <%= f.label :body, 'Add an element' %>
      <br>
      <%= f.text_field :body, :class => "list-field"  %>
      <%= f.submit("Submit", method: :post, :class => "btn btn-default btn-sm ajax-create")%>
    </p>
  <% end %>

<% else %>
  <ul>
  <% @list.elements.each do |element| %>
    <li><%= element.body %></li>
  <% end %>
  </ul>
<% end %>