<h1>List Name:</h1><br>

<h3><%= @list.list_name %></h3>
<% @list.items.each do |item| %>
  <ul>
    <li><%= item.name %></li>
  </ul>
<% end %>
<% if current_user %>
  
  <% if current_user.id == @list.user_id %>
  <p>
    Add items to your list.
  </p>
    <div id="item-form">

      <%= form_for @item do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.hidden_field :list_id, value: @list.id %>

        <%= f.submit "Add item"%>
      <% end %>

    </div>
  <% end %>
<% end %>
<% if current_user %>
  <%= link_to "Back to your lists", user_path(current_user) %>
<% end %>