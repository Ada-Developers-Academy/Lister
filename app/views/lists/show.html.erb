<strong><%= @list.name %></strong>
<%= link_to "Edit", edit_list_path(@list) %>
<% @list.items.each do |i| %>
<ul>
  <li><%= i.name %><%= link_to "Delete", list_item_path(@list,i), class: "delete", method: :delete %></li>
  </ul>
<% end %>

<% if current_user && current_user.id == @list.user_id %>
<a class="add-item-link">add an item</a>
<div id="add-item-area">
  <%= form_for([@list, Item.new], remote: true)  do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="actions">
        <%= f.submit "Add to list", class: "action" %>
      </div>
  <% end %>
  </div>
<% end %>

