<!DOCTYPE html>
<html>
  <head>
    <title>Lister</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='signin'>
      <% if current_user %>
        <span> Hello, <%=link_to "#{current_user.username}", user_path(current_user) %>!</span>
        <%=link_to "Sign out", signout_path, method: :delete %>
      <% else %>
        <%= link_to "Sign in!", login_path %>
      <% end %>
    </div>
    
  <%=flash[:notice] %>

  <%= yield %>

  </body>
</html>
