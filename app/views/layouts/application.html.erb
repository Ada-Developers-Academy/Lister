<!DOCTYPE html>
<html>
  <head>
    <title>Lister</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <h1><%= link_to "List Yo Lists", root_path %></h1>
    <% if @current_user %>
      <p>Signed in as <%= @current_user.username %></p>
      <ul class="nav nav-tabs">
        <li><%= link_to "All Lists", root_path, :class => "btn btn-default" %></li>
        <li><%= link_to "My Lists", my_lists_path, :class => "btn btn-default" %></li>
        <li><%= link_to "Create New List", new_list_path, :class => "btn btn-default" %></li>
        <li><%= link_to "Log Out", sign_out_path, :class => "btn btn-default" %></li>
      </ul>
    <% else %>
      <ul class="nav nav-tabs">
        <li><%= link_to "Log In", sign_in_path, :class => "btn btn-default" %></li>
        <li><%= link_to "Sign Up", sign_up_path, :class => "btn btn-default" %></li>
      </ul>
    <% end %>

    <%= notice %>

    <%= yield %>

  </body>
</html>
