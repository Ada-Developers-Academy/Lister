    <%= form_for(:session, url: signin_path) do |f| %>
      <table>
        <tbody>
          <tr>
            <td><%= label_tag :email %></td>
            <td><%= text_field_tag :email, params[:email] %></td></tr>
          <tr>
            <td><%= label_tag :password %></td>
            <td><%= password_field_tag :password %></td>
          </tr>
          <tr><td></td><td> <p class="button"><%= submit_tag "Log in" %></p></td>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

