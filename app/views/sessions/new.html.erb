<% unless @session.nil? %>
  <% if @session.errors.any? %>
    <% @session.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  <% end %>
<% end %>

<%= form_for(:session, url: create_session_path) do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>